<Window x:Class="ADONET_hw_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADONET_hw_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid ItemsSource="{Binding}">

        </DataGrid>
        <TextBlock>Изменить артиста</TextBlock>
        <ComboBox x:Name="cb_Artist"/>
        <TextBlock>Изменить песню</TextBlock>
        <ComboBox x:Name="cb_Song"/>
        <Button Click="Button_Click_Update">Применить изменения</Button>
    </StackPanel>
</Window>
